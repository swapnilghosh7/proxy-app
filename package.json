{
  "name": "proxy-app",
  "version": "1.0.0",
  "description": "Proxy application with custom headers",
  "main": "electron/main.js",  "scripts": {
    "clean": "rimraf build dist",
    "start": "cross-env NODE_ENV=production npm run clean && npm run react-build && electron .",
    "dev": "cross-env NODE_ENV=development npm run clean && concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "react-start": "webpack serve --mode development",
    "react-build": "webpack --mode production",
    "build": "npm run clean && npm run react-build && electron-builder build",
    "build:win": "npm run clean && npm run react-build && electron-builder build --win",
    "build:mac": "npm run clean && npm run react-build && electron-builder build --mac",
    "build:win32": "npm run clean && npm run react-build && electron-builder build --win --ia32",
    "build:win64": "npm run clean && npm run react-build && electron-builder build --win --x64",
    "build:portable": "npm run clean && npm run react-build && electron-builder build --win portable"
  },"build": {
    "appId": "com.proxy.app",
    "productName": "Custom Header Proxy",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable"
        }
      ]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "build",
        "to": "build"
      }
    ]
  },
  "keywords": [
    "proxy",
    "custom-headers",
    "electron",
    "react"
  ],
  "author": "",
  "license": "ISC",  "dependencies": {
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "find-process": "^1.4.7",
    "http-proxy-middleware": "^2.0.6",
    "ip": "^1.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tcp-port-used": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
